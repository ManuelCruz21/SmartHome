<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="smarthome">

    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>smarthome.persistence.jpa.data_model.ActuatorDataModel</class>
    <class>smarthome.persistence.jpa.data_model.ActuatorModelDataModel</class>
    <class>smarthome.persistence.jpa.data_model.ActuatorTypeDataModel</class>
    <class>smarthome.persistence.jpa.data_model.DeviceDataModel</class>
    <class>smarthome.persistence.jpa.data_model.DeviceTypeDataModel</class>
    <class>smarthome.persistence.jpa.data_model.HouseDataModel</class>
    <class>smarthome.persistence.jpa.data_model.LogDataModel</class>
    <class>smarthome.persistence.jpa.data_model.RoomDataModel</class>
    <class>smarthome.persistence.jpa.data_model.SensorDataModel</class>
    <class>smarthome.persistence.jpa.data_model.SensorModelDataModel</class>
    <class>smarthome.persistence.jpa.data_model.SensorTypeDataModel</class>
    <class>smarthome.persistence.jpa.data_model.UnitDataModel</class>
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="jakarta.persistence.jdbc.url"
                value="jdbc:h2:./src/main/resources/META-INF/test.mv"/>
      <property name="jakarta.persistence.jdbc.user" value=""/>
      <property name="jakarta.persistence.jdbc.password" value=""/>
      <!-- <property name="eclipselink.logging.level" value="FINE"/>-->
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <property name="jakarta.persistence.schema-generation.database.action"
                value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>

